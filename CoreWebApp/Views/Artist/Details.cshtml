@model Artist
<div class="row justify-content-center m-3">
    @{
        var photoPath = "~/images/" + (Model.PicturePath ?? "noimage.png");
    }
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.ArtistName</h1>
            </div>
            <div class="card-body">
                <img class="card-img-top imageThumpnail" src="@photoPath" asp-append-version="true" />
                <h4>Artist ID: @Model.ArtistId</h4>
                <h4>Medium: @Model.Medium</h4>
            </div>
            <div class="card-footer">
                <a asp-controller="Artist" asp-action="Index" class="btn btn-outline-primary btn-sm">Back</a>
                <a href="#" class="btn btn-outline-primary btn-sm">Edit</a>
                <a href="#" class="btn btn-outline-danger btn-sm">Delete</a>
            </div>
        </div>
    </div>
</div>
